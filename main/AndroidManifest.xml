<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dsouza.test" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MembersActivity"
            android:label="@string/title_activity_members"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dsouza.test.MainActivity" />
        </activity>
        <activity
            android:name=".ServicesActivity"
            android:label="@string/title_activity_services"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dsouza.test.MainActivity" />
        </activity>
        <activity
            android:name=".AltarServersActivity"
            android:label="@string/title_activity_altar_servers"
            android:parentActivityName=".MembersActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dsouza.test.MembersActivity" />
        </activity>
        <activity
            android:name=".frag"
            android:label="@string/title_activity_frag"
            android:parentActivityName=".MembersActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dsouza.test.MembersActivity" />
        </activity>
        <activity
            android:name=".GroupwiseActivity"
            android:label="@string/title_activity_groupwise"
            android:parentActivityName=".AltarServersActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dsouza.test.AltarServersActivity" />
        </activity>
    </application>

</manifest>
