	<!-- HOME SCREEN -->
	<!-- HOME SCREEN IMAGE -->
    
	<ImageView

        android:id="@+id/home_screen_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/team_2_txt" />
	
	<!-- home_screen_txt -->	
	<TextView
		android:id="@+id/home_screen_txt"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="AUS"
		android:textSize="25dp"
		android:textColor="@color/orange"
		android:typeface="serif"
		android:gravity="center"
		android:padding="10dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/team_2_img"
        android:layout_toEndOf="@+id/scorecard_btn" />
		
	<!-- newsFeed_btn -->	
    <Button
        android:id="@+id/newsFeed_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News Feed"
        android:textIsSelectable="true"
        android:onClick="viewScorecard"        
        android:textColor="@color/black"
        android:layout_below="@+id/team_1_txt"
        android:layout_centerHorizontal="true" />
    
